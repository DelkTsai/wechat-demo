page {
  background-color: #fff;
  font-size: 14px;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.search-ipt {
  width: 100%;
  height: 48px;
  position: relative;
  border-bottom: 1px solid #eee;
}

.search-ipt input {
  position: absolute;
  background-color: #eee;
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  border-radius: 10px;
  padding-left: 54rpx;
  top: 10px;
  left: 25rpx;
  right: 170rpx;
}

.search-ipt button {
  position: absolute;
  color: #353535;
  font-size: 14px;
  width: 120rpx;
  padding: 0;
  height: 28px;
  line-height: 28px;
  top: 10px;
  right: 25rpx;
}

.search-ipt .search-btn {
  color: #fff;
  background-color: #e64340;
}

.search-ipt icon {
  position: absolute;
  top: 16px;
  left: 36rpx;
}

.result-title text {
  float: left;
  width: 25%;
  text-align: center;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.result-title .z-active {
  color: #e64340;
}

.goods {
  position: absolute;
  top: 86px;
  bottom: 0;
}

.good {
  padding: 10px 0 0;
}

.good image {
  width: 240rpx;
  height: 240rpx;
  margin-left: 25rpx;
}

.good-detail {
  width: 420rpx;
  margin-right: 25rpx;
  padding-bottom: 20px;
  border-bottom: 1px solid #eee;
}

.good-detail text {
  display: block;
}

text.good-title {
  width: 420rpx;
  line-height: 20px;
  height: 40px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.good-price {
  color: #e64340;
  font-weight: bold;
  font-size: 20px;
  margin: 12px 0 6px;
}

.good-comments {
  font-size: 12px;
  color: #888;
}
