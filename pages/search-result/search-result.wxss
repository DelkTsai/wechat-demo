page {
  background-color: #fff;
}

.search-ipt {
  width: 100%;
  height: 48px;
  position: relative;
  border-bottom: 1px solid #eee;
}

.search-ipt input {
  position: absolute;
  background-color: #eee;
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  border-radius: 10px;
  padding-left: 54rpx;
  top: 10px;
  left: 25rpx;
  right: 170rpx;
}

.search-ipt button {
  position: absolute;
  color: #353535;
  font-size: 14px;
  width: 120rpx;
  padding: 0;
  height: 28px;
  line-height: 28px;
  top: 10px;
  right: 25rpx;
}

.search-ipt .search-btn {
  color: #fff;
  background-color: #e64340;
}

.search-ipt icon {
  position: absolute;
  top: 16px;
  left: 36rpx;
}

.hot-tag text {
  float: left;
}

.history, .hot, .history-tag, .hot-tag {
  font-size: 14px;
  padding: 10px 25rpx;
}

.f-fr {
  color: #e64340;
}

.history-tag text, .hot-tag text {
  font-size: 12px;
  height: 20px;
  line-height: 20px;
  padding: 0 6px;
  background-color: #eee;
  margin-right: 10px;
  margin-bottom: 10px;
  border-radius: 2px;
}
